# Cache static assets for 1 year (they have hashed filenames)
/build/*
  Cache-Control: public, max-age=31536000, immutable

/assets/*
  Cache-Control: public, max-age=31536000, immutable

# Cache category images for 1 year (static, rarely change)
/images/categories/*
  Cache-Control: public, max-age=31536000, immutable

# Cache other images for 1 week
/images/*
  Cache-Control: public, max-age=604800

# Edge cache homepage for 5 minutes, stale-while-revalidate for 1 hour
/
  Cache-Control: public, max-age=300, s-maxage=300, stale-while-revalidate=3600
  CDN-Cache-Control: max-age=300

# Don't cache API endpoints
/api/*
  Cache-Control: no-store, no-cache, must-revalidate
